<% if @word.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@word.errors.count, I18n.t(:error)) %> <%= I18n.t(:prohibited_this_word_from_being_saved)%>:</h2>
    <ul>
    <% @word.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>