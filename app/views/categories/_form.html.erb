<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category do |c| %>

      <%= render "error" %>
      
      <%= c.label :title %>
      <%= c.text_field :title, class: "form-control" %>

      <%= c.submit I18n.t(:submit), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>